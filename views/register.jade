extends layout

block content
	.container
		form.form-signin(action="/register" method="post")
			h2.form-signin-heading Sign up
			p.text-danger #{message}
			label.sr-only(for="inputFirstName") Firstname
			input.form-control(type="text" id="inputFirstname" placeholder="Firstname" name="firstname" autofocus)
			label.sr-only(for="inputSurname") Surname
			input.form-control(type="text" id="inputSurname" placeholder="Surname" name="surname" autofocus)
			label.sr-only(for="inputEmail") Email address
			input.form-control(type="email" id="inputEmail" placeholder="Email address" name="email" required autofocus)
			label.sr-only(for="inputPassword") Password
			input.form-control(type="password" id="inputPassword" placeholder="Password" name="password" required)
			button.btn.btn-md.btn-primary.btn-block(type="submit")
				i.fa.fa-user-plus
				span &nbsp;Sign up
