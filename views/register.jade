extends layout

block content
	.container
		form.form-signin(action="/register" method="post")
			h2.form-signin-heading Create a new account
			p.text-danger #{message}
			label.sr-only(for="inputFirstName") Name
			input.form-control(type="text" id="inputName" placeholder="Your name" name="name" autofocus)
			label.sr-only(for="inputEmail") Email address
			input.form-control(type="email" id="inputEmail" placeholder="Email address" name="email" required autofocus)
			label.sr-only(for="inputPassword") Password
			input.form-control(type="password" id="inputPassword" placeholder="Password" name="password" required)
			button.btn.btn-md.btn-primary.btn-block(type="submit")
				i.fa.fa-user-plus
				span &nbsp;Sign up
			hr
			h4.text-center.text-success
				a(href="/login") Sign in to my existing account!