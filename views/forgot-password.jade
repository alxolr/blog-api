extends layout

block content
	.container
		p.text-center In order to reset your password you should enter your valid email address.
		form.form-signin(method="post" action="forgot-password")
			.form-group
				input.form-control(type="email" placeholder="Email" required)

				button.btn.btn-primary.btn-block(type="submit")
					i.fa.fa-lock
					span &nbsp; Reset Password